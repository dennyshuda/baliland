---
import Container from "./Container.astro";
---

<nav class="py-4 sticky z-10 top-0 bg-white">
  <Container>
    <div class="flex justify-between items-center">
      <div>
        <a class="font-bold text-2xl text-primary" href="/">BaliLand</a>
      </div>
      <div class="hidden md:block space-x-2 text-textGray">
        <a href="/">Home</a>
        <a href="/discover">Discover</a>
        <a href="/about-us">About Us</a>
        <a href="/contact">Contact</a>
      </div>
      <div class="invisible md:visible md:flex items-center space-x-2">
        <svg
          width="18"
          height="19"
          viewBox="0 0 18 19"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M8.94373 17.9375C13.6125 17.9375 17.3812 14.1688 17.3812 9.5H0.506226C0.506226 14.1688 4.27498 17.9375 8.94373 17.9375Z"
            fill="#F9F9F9"></path>
          <path
            d="M8.94373 1.0625C4.27498 1.0625 0.506226 4.83125 0.506226 9.5H17.3812C17.3812 4.83125 13.6125 1.0625 8.94373 1.0625Z"
            fill="#ED4C5C"></path>
        </svg>
        <select class="" name="languages">
          <option value="ID">ID</option>
          <option value="US">US</option>
        </select>
      </div>
      <div class="md:hidden relative cursor-pointer">
        <svg
          id="hamburger"
          class="w-8 font-bold"
          viewBox="0 0 28 28"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
          ><path
            d="M4 7C4 6.44771 4.44772 6 5 6H24C24.5523 6 25 6.44771 25 7C25 7.55229 24.5523 8 24 8H5C4.44772 8 4 7.55229 4 7Z"
            fill="#295943"></path><path
            d="M4 13.9998C4 13.4475 4.44772 12.9997 5 12.9997L16 13C16.5523 13 17 13.4477 17 14C17 14.5523 16.5523 15 16 15L5 14.9998C4.44772 14.9998 4 14.552 4 13.9998Z"
            fill="#295943"></path><path
            d="M5 19.9998C4.44772 19.9998 4 20.4475 4 20.9998C4 21.552 4.44772 21.9997 5 21.9997H22C22.5523 21.9997 23 21.552 23 20.9998C23 20.4475 22.5523 19.9998 22 19.9998H5Z"
            fill="#295943"></path></svg
        >

        <div
          id="menu"
          class="absolute hidden text-center bg-primary rounded-md text-white p-8 w-40 right-0"
        >
          <a href="/">Home</a>
          <a href="/discover">Discover</a>
          <a href="/about-us">About Us</a>
          <a href="/contact">Contact</a>
        </div>
      </div>
    </div>
  </Container>
</nav>

<script>
  const hamburgerElement = document.getElementById("hamburger");
  const menuElement = document.getElementById("menu");

  hamburgerElement!.onclick = () => {
    menuElement?.classList.toggle("hidden");
  };
</script>
