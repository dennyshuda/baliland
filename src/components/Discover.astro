---
function titleToSlug(title: string) {
  return title.toLowerCase().split(" ").join("-");
}

// console.log(titleToSlug("Pura Tanah Lot"));

const destinations = [
  {
    title: "Pura Tanah Lot",
    imageUrl:
      "https://anekatempatwisata.com/wp-content/uploads/2014/10/pura-Tanah-Lot-610x453.jpg",
  },
  {
    title: "Pantai Padang Padang",
    imageUrl:
      "https://anekatempatwisata.com/wp-content/uploads/2014/11/Pantai-Padang-Padang.jpg",
  },
  {
    title: "Danau Beratan Bedugul",
    imageUrl:
      "https://anekatempatwisata.com/wp-content/uploads/2014/03/Danau-Beratan-Bedugul.jpg",
  },
